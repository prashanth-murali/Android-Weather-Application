<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#ff1ba1ef"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tempetownlake.winterhascome.MainActivity">
    <TextView
        android:id="@+id/location"
        android:textColor="#fff"
        android:text="Chennai,IN"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/icon"
        android:layout_below="@+id/location"
        android:layout_marginTop="10dp"
        android:background="#ff1ba1ee"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/temp"
        android:text="12 Deg"
        android:textStyle="normal"
        android:textColor="#fff"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="42sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/wind"
        android:textColor="#fff"
        android:textSize="16sp"
        android:text="Wind"
        android:layout_below="@+id/icon"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cloud"
        android:text="Cloud"
        android:layout_below="@+id/wind"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pressure"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:text="Pressure"
        android:layout_below="@+id/cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/humidity"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:text="Humidity"
        android:layout_below="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sunrise"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:text="Sunrise"
        android:layout_below="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/sunset"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:text="Sunset"
        android:layout_below="@+id/sunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/updateTime"
        android:textSize="26sp"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:text="Last Updated"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
